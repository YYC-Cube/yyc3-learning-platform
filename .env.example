# 应用基本配置
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# PostgreSQL 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=yyc3
DB_PASS=your_secure_password_here
DB_NAME=yyc3_my
DB_SSL=false
DB_CONNECTION_LIMIT=10
DB_IDLE_TIMEOUT=30000
DB_MAX_LIFETIME=600000

# PostgreSQL 连接字符串（可选，如果提供则优先使用）
# 格式: postgresql://用户名:密码@主机:端口/数据库名
DATABASE_URL=postgresql://yyc3:your_secure_password_here@localhost:5432/yyc3_my

# JWT配置
# 生成安全的 JWT 密钥: openssl rand -base64 32
JWT_SECRET=your-generated-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# BCrypt配置
BCRYPT_ROUNDS=10

# 应用配置
NODE_ENV=development
PORT=3000

# 可选：Redis 配置（如果使用缓存）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# 可选：日志配置
# LOG_LEVEL=info
# LOG_FILE_PATH=./logs

# 可选：监控配置
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=development

# 可选：第三方 API 密钥
# OPENAI_API_KEY=sk-your-openai-api-key
# GOOGLE_API_KEY=your-google-api-key
